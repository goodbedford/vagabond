<div id="city">
<div class="jumbotron">
	<!-- :style => "background-image: url(<%= @city.img_url %>);" -->
	<style media="screen">
		.jumbotron {background-image: url(<%= @city.img_url %>);}
	</style>
	
	<!-- <img src = <%= @city.img_url %> /> -->
	<span id="welcome_message">Welcome to <%= @city.name %>, <%= @city.country%></span>
	
	<br>
	<%= link_to "New Post", new_post_path, class:"btn btn-success btn-lg pull-right"%>
</div>

<div class="row">
	<div class="col-md-9 col-md-push-3">
		<div class="col-sm-9">
			<% @city.posts.each do |post| %>
			<div class="well col-xs-12" id="post">
				<%= link_to post_path(post) do  %>
				<h3 class="p-title"><%= post.title %></h3>
				<% end %>
				<h5><%= post.body %></h5>
				<%= link_to user_path(post.user) do %>
				<p>Author: <%=post.user.username  %></p>
				<% end %>	

				<h5>Tags: <%= raw post.tags.map(&:title).map { |t| link_to t, tag_path(t) }.join(', ') %>
				</h5>
			</div>
			<% end %>
		</div>
	</div>
 </div>
  <div class="col-md-3 col-md-pull-9">

  </div>
</div>
